<% if object.errors.any? %>
	<div id="error_explanation">
	<h2><%= pluralize(object.errors.count, "error") %>
		in the signup form:</h2>
	<p>There were problems in the following fields:</p>
	<ul>
	<% object.errors.full_messages.each do |msg| %>
	<li><%= msg %></li>
	<% end %>
	</ul>
	</div>
<% end %>